<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">

    <!-- ============ BASE TEXT ============ -->
    <Style x:Key="AppTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
    </Style>

    <!-- ============ EDITORS (TextEdit / ComboBoxEdit etc) ============ -->
    <Style x:Key="AppBaseEditStyle" TargetType="{x:Type dxe:BaseEdit}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,0"/>
    </Style>

    <!-- ============ BUTTONS ============ -->
    <Style x:Key="AppButtonStyle" TargetType="{x:Type dx:SimpleButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="16,0"/>
    </Style>

    <!-- ToggleButton (стрелка слева / др. тумблеры) -->
    <Style x:Key="AppToggleStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="14,0"/>
    </Style>

    <!-- ============ LISTBOX ============ -->
    <Style x:Key="AppListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ============ GRID HEADERS ============ -->
    <Style x:Key="AppGridColumnHeaderStyle" TargetType="{x:Type dxg:GridColumnHeader}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="40"/>
    </Style>

    <!-- ============ TABLE VIEW ============ -->
    <Style x:Key="AppTableViewStyle" TargetType="{x:Type dxg:TableView}">
        <Setter Property="AllowEditing" Value="False"/>
        <Setter Property="RowMinHeight" Value="36"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource AppGridColumnHeaderStyle}"/>
        <Setter Property="ShowGroupPanel" Value="False"/>
        <Setter Property="AllowPerPixelScrolling" Value="True"/>
    </Style>

    <!-- ============ TABS ============ -->
    <Style x:Key="AppTabControlStyle" TargetType="{x:Type dx:DXTabControl}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="AppTabItemStyle" TargetType="{x:Type dx:DXTabItem}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="14,8"/>
        <Setter Property="MinHeight" Value="40"/>
    </Style>

    <!-- ============ Label / Caption text ============ -->
    <Style x:Key="AppLabelTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Opacity" Value="0.85"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- ============ обычный текст ============ -->
    <Style x:Key="AppTextStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
