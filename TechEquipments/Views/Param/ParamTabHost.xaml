<UserControl x:Class="TechEquipments.Views.Param.ParamTabHost"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:TechEquipments.Views.Param"
                    xmlns:views="clr-namespace:TechEquipments.Views.Param"
                    xmlns:models="clr-namespace:TechEquipments"
                    mc:Ignorable="d"
                    d:DesignHeight="400" d:DesignWidth="700">

    <UserControl.Resources>

        <!-- ✅ Автовыбор разметки по типу модели (CurrentParamModel) -->

        <DataTemplate DataType="{x:Type models:AIParam}">
            <views:AIParamView />
        </DataTemplate>

        <!--<DataTemplate DataType="{x:Type models:DIParam}">
            <local:DIParamView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:DOParam}">
            <local:DOParamView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type models:MotorParam}">
            <local:MotorParamView />
        </DataTemplate>-->

        <!-- 🧯 Фолбэк, если тип пока не поддержан -->
        <!--<DataTemplate DataType="{x:Type sys:Object}">
            <TextBlock Text="No Param layout for this equipment type."
                       Margin="8"/>
        </DataTemplate>-->

    </UserControl.Resources>

    <Grid Margin="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="12,0,0,0">

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Padding="0, 4" Text="Name: " FontWeight="SemiBold"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Padding="0, 4" Text="{Binding SelectedListBoxEquipment.Equipment, TargetNullValue='-'}" />

            <TextBlock Grid.Row="1" Grid.Column="0" Padding="0, 4" Text="Type: " FontWeight="SemiBold" />
            <TextBlock Grid.Row="1" Grid.Column="1" Padding="0, 4" Text="{Binding SelectedListBoxEquipment.Type, TargetNullValue='-'}" />

            <TextBlock Grid.Row="2" Grid.Column="0" Padding="0, 4" Text="Desc: " FontWeight="SemiBold" />
            <TextBlock Grid.Row="2" Grid.Column="1" Padding="0, 4" Text="{Binding SelectedListBoxEquipment.Description, TargetNullValue='-'}" />

        </Grid>

        <!-- ✅ В зависимости от CurrentParamModel подставится нужный *ParamView.xaml -->
        <ContentControl Grid.Row="3" Content="{Binding CurrentParamModel}" />

        <!--✅ Строка состояния именно для Param-->
        <TextBlock Grid.Row="4" Grid.Column="1" Padding="0, 4" Text="{Binding ParamStatusText}" Style="{StaticResource AppTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

    </Grid>
    
</UserControl>
